@model IEnumerable<BusinessLayer.Models.MesajModelleri.MesajModel>

@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 col-xs-12">
    @if (TempData["uyari"] != null)
    {
        <div class="alert alert-success">
            @TempData["uyari"].ToString()
        </div>
    }
    @if (TempData["hata"] != null)
    {
        <div class="alert alert-danger">
            @TempData["hata"].ToString()
        </div>
    }
    <div class="col-md-12 col-xs-12">
        <h2>Gönderilen Mesaj Listesi</h2>
        <p>
            @Html.ActionLink(" ", "YeniMesaj", new { }, new { @class = "glyphicon glyphicon-plus" }) |
            <span class="glyphicon glyphicon-arrow-down" id="arama"></span>
        </p>
        <div class="form-horizontal" id="aramaSecenekleri" hidden>
            <div class="col-md-12">
                <div class="col-md-4">
                     @Html.DropDownList("kullaniciId", (List<SelectListItem>) ViewBag.kullanicilarSelect, "Kullanıcı Seçiniz", htmlAttributes: new {@class = "form-control", @id = "kullaniciId"})
                    </div>
                <div class="col-md-4">
                    &emsp;
                </div>
                <div class="col-md-4">
                    <input type="date" class="form-control" id="tarih" />
                </div>
                <br /><br />
                <div class="col-md-4">
                    @Html.DropDownList("kimeGonderildi", (List<SelectListItem>)ViewBag.kimeGonderildi, htmlAttributes: new { @class = "form-control", @id = "kimeGonderildi" })
                </div>
                <div class="col-md-4">
                    &emsp;
                </div>
                <div class="col-md-4">
                    <center>
                        <button type="button" class="btn btn-success" style="width: 100%" id="filtrele">Filtrele</button>
                    </center>
                </div>
            </div>
            <br /><br /><br class="hidden-xs" /><br class="hidden-xs" />
        </div>
    </div>
    <table id="tablo" class="points_table col-xs-12 col-md-12" style="margin-top:10px">
        <thead>
            <tr>
                <th class="col-md-3 col-xs-3">@Html.DisplayNameFor(model => model.KullaniciAdiSoyadi)</th>
                <th class="col-md-3 col-xs-3">@Html.DisplayNameFor(model => model.AliciStr)</th>
                <th class="col-md-3 col-xs-3">@Html.DisplayNameFor(model => model.Tarih)</th>
                <th class="col-md-3 col-xs-3">İşlemler</th>
            </tr>
        </thead>
        <tbody class="points_table_scrollbar" id="tablo_tbody"></tbody>
    </table>
    <script src="~/Scripts/MesajListeleScript.js"></script>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"> Lütfen Bekleyiniz. Gönderilen mesajlar Listeleniyor...</h4>
                </div>
                <div class="modal-body">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width:100%"> <span class="sr-only"> </span> </div>
                    </div>
                </div>
                <div class="modal-footer">

                </div>
            </div>

        </div>
    </div>
</div>

