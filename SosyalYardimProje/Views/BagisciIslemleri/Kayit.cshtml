@model BusinessLayer.Models.BagisciGiris.BagisciKayitModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kayıt Ol</title>
    <link rel="stylesheet" href="~/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link href="~/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @if (TempData["hata"] != null)
                {
                    <div class="alert alert-danger text-center">
                        @TempData["hata"].ToString()
                    </div>
                }
            </div>
            <div class="col-md-12">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <center>
                            <h3>Kayıt Ol</h3>
                        </center>
                        <hr/>
                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        <div class="form-group">
                            @Html.LabelFor(model => model.BagisciAdi, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.BagisciAdi, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.BagisciAdi, "", new {@class = "text-danger"})
                            </div>
                            @Html.LabelFor(model => model.BagisciSoyadi, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.BagisciSoyadi, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.BagisciSoyadi, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.BagisciTelNo, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.BagisciTelNo, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.BagisciTelNo, "", new {@class = "text-danger"})
                            </div>
                            @Html.LabelFor(model => model.BagisciEPosta, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.BagisciEPosta, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.BagisciEPosta, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.BagisciSifre, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.BagisciSifre, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.BagisciSifre, "", new {@class = "text-danger"})
                            </div>
                            @Html.LabelFor(model => model.BagisciSifreTekrar, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.BagisciSifreTekrar, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.BagisciSifreTekrar, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.BagisciAdres, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.BagisciAdres, new {htmlAttributes = new {@class = "form-control", @rows = 5}})
                                @Html.ValidationMessageFor(model => model.BagisciAdres, "", new {@class = "text-danger"})
                            </div>
                            @Html.LabelFor(model => model.SehirId, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-2">
                                @Html.DropDownListFor(model => model.SehirId, (List<SelectListItem>) ViewBag.sehirlerSelectList, htmlAttributes: new {@class = "form-control", @id = "sehirId"})
                                @Html.ValidationMessageFor(model => model.SehirId, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            <center>
                                <input type="submit" value="Kayıt Ol" class="btn btn-success"/>
                            </center>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-12">
                <center>
                    <a href="@Url.Action("Giris")">Giriş Sayfasına Dönmek için Tıklayınız</a>
                </center>
            </div>
        </div>
    </div>

</body>
</html>
