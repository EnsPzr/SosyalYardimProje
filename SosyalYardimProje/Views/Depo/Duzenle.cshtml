@model BusinessLayer.Models.DepoModel

@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Duzenle</h2>

<div class="col-md-12 col-xs-12">
    <h2>Depoya Eşya Ekle</h2>
    @if (TempData["hata"] != null)
    {
        <div class="col-md-12 col-xs-12">
            <div class="alert alert-danger">
                @TempData["hata"].ToString()
            </div>
        </div>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.HiddenFor(m=>m.DepoEsyaId)
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.EsyaId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.EsyaId, (List<SelectListItem>)ViewBag.esyalarSelect, "Eşya Seçiniz", htmlAttributes: new { @class = "form-control", @id = "sehirId" })
                    @Html.ValidationMessageFor(model => model.EsyaId, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.Sehir.SehirId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.Sehir.SehirId, (List<SelectListItem>)ViewBag.sehirlerSelect, "Şehir Seçiniz", htmlAttributes: new { @class = "form-control", @id = "sehirId" })
                    @Html.ValidationMessageFor(model => model.Sehir.SehirId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Adet, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Adet, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Adet, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <center>
                    <input type="submit" value="Kaydet" class="btn btn-success" />
                </center>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Listeye Geri Dön", "Liste")
    </div>

</div>