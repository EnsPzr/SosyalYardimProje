@model BusinessLayer.Models.KasaModelleri.KasaModel

@{
    ViewBag.Title = "Kasa İşlemi Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kasa İşlemi Ekle</h2>
@if (TempData["hata"] != null)
{
    <div class="col-md-12 col-xs-12">
        <div class="alert alert-danger">
            @TempData["hata"].ToString()
        </div>
    </div>
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Miktar, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Miktar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Miktar, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.Tarih, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Tarih, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tarih, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Aciklama, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Aciklama, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Sehir.SehirId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.Sehir.SehirId, (List<SelectListItem>)ViewBag.sehirlerSelect, "Şehir Seçiniz", htmlAttributes: new { @class = "form-control", @id = "sehirId" })
                @Html.ValidationMessageFor(model => model.Sehir.SehirId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GelirGider, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.GelirGider, (List<SelectListItem>)ViewBag.gelirGiderSelect2,  htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GelirGider, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <center>
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </center>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
