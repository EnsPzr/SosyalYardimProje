@model IEnumerable<BusinessLayer.Models.IhtiyacSahibiModelleri.IhtiyacSahibiModel>

@{
    ViewBag.Title = "İhtiyaç Sahibi Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int s = 0;
}



<div class="col-md-12 col-xs-12">
    @if (TempData["uyari"] != null)
    {
        <div class="alert alert-success">
            @TempData["uyari"].ToString()
        </div>
    }
    @if (TempData["hata"] != null)
    {
        <div class="alert alert-danger">
            @TempData["hata"].ToString()
        </div>
    }
    <div class="col-md-12 col-xs-12">
        <h2>Eklediğiniz İhtiyaç Sahipleri Listesi</h2>
        <p>
            @Html.ActionLink(" ", "Ekle", new { }, new { @class = "glyphicon glyphicon-plus" })
        </p>
    </div>
    <table id="tablo" class="points_table col-xs-12 col-md-12" style="margin-top:10px">
        <thead>
            <tr>
                <th class="col-md-3 col-xs-3">@Html.DisplayNameFor(model => model.IhtiyacSahibiAdi)</th>
                <th class="col-md-3 col-xs-3">@Html.DisplayNameFor(model => model.IhtiyacSahibiSoyadi)</th>
                <th class="col-md-3 col-xs-3">@Html.DisplayNameFor(model => model.IhtiyacSahibiTelNo)</th>
                <th class="col-md-3 col-xs-3">İşlemler</th>
            </tr>
        </thead>
        <tbody class="points_table_scrollbar" id="tablo_tbody">
            @foreach (var item in Model)
            {
                if (s % 2 == 0)
                {
                    <tr class="even">
                        <td class="col-md-3 col-xs-3">
                            @Html.DisplayFor(modelItem => item.IhtiyacSahibiAdi)
                        </td>
                        <td class="col-md-3 col-xs-3">
                            @Html.DisplayFor(modelItem => item.IhtiyacSahibiSoyadi)
                        </td>
                        <td class="col-md-3 col-xs-3">
                            @Html.DisplayFor(modelItem => item.IhtiyacSahibiTelNo)
                        </td>
                        <td class="col-md-3 col-xs-">
                            @Html.ActionLink(" ", "Duzenle", new { id = item.IhtiyacSahibiId }, new { @class = "glyphicon glyphicon-pencil" }) |
                            @Html.ActionLink(" ", "Detay", new { id = item.IhtiyacSahibiId }, new { @class = "glyphicon glyphicon-eye-open" })
                        </td>
                    </tr>
                }
                else
                {
                    <tr class="odd">
                        <td class="col-md-3 col-xs-3">
                            @Html.DisplayFor(modelItem => item.IhtiyacSahibiAdi)
                        </td>
                        <td class="col-md-3 col-xs-3">
                            @Html.DisplayFor(modelItem => item.IhtiyacSahibiSoyadi)
                        </td>
                        <td class="col-md-3 col-xs-3">
                            @Html.DisplayFor(modelItem => item.IhtiyacSahibiTelNo)
                        </td>
                        <td class="col-md-3 col-xs-">
                            @Html.ActionLink(" ", "Duzenle", new { id = item.IhtiyacSahibiId }, new { @class = "glyphicon glyphicon-pencil" }) |
                            @Html.ActionLink(" ", "Detay", new { id = item.IhtiyacSahibiId }, new { @class = "glyphicon glyphicon-eye-open" })
                        </td>
                    </tr>
                }
                s++;
            }

        </tbody>
    </table>
</div>