@model BusinessLayer.Models.KullaniciModelleri.KullaniciGirisModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş</title>
    <link rel="stylesheet" href="~/bower_components/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 hidden-xs">
                &emsp;
            </div>
            <div class="col-md-4 col-xs-12">
                @using (Html.BeginForm("Giris", "Giris", FormMethod.Post))
                {
                    <div class="panel panel-default">
                        <div class="panel-heading text-center">
                            Koordinatör Giriş
                        </div>
                        <div class="panel-body">
                            <div class="form-horizontal">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <div class="col-md-12 text-center">
                                        @Html.LabelFor(model => model.EPosta, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(model => model.EPosta, new { @class = "form-control" })
                                        <div class="text-center">
                                            @Html.ValidationMessageFor(model => model.EPosta, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br class="hidden-xs" />
                                <div class="form-group">
                                    <div class="col-md-12 text-center">
                                        @Html.LabelFor(model => model.Sifre, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model=>model.Sifre, new { htmlAttributes = new { @class = "form-control" } })
                                        <div class="text-center">
                                            @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br class="hidden-xs" />
                                <div class="form-group">
                                    <div class="col-md-12 text-center">
                                        <button type="submit" class="btn btn-success">Giriş</button>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-4 hidden-xs">
                &emsp;
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
