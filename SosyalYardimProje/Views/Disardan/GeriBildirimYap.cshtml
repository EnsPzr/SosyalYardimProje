                        @Html.EditorFor(model => model.BagisciEPosta, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BagisciEPosta, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BagisciAdres, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.BagisciAdres, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BagisciAdres, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.BagisciSifre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.BagisciSifre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BagisciSifre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BagisciSifreTekrar, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.BagisciSifreTekrar, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BagisciSifreTekrar, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.SehirBagisci.SehirId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.SehirBagisci.SehirId, (List<SelectListItem>)ViewBag.sehirlerSelectList, "Şehir Seçiniz", htmlAttributes: new { @class = "form-control", @id = "sehirId" })
                        @Html.ValidationMessageFor(model => model.SehirBagisci.SehirId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading text-center">
               Geri Bildiriminiz
            </div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(model => model.Konu, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Konu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Konu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Mesaj, htmlAttributes: new { @class = "control-label col-md-2" })
